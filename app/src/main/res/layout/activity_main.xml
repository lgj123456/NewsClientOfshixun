<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="广交院实训版"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"/>

        <RadioGroup
            android:id="@+id/rg_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <RadioButton
                android:id="@+id/rb_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_01"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="新闻"
                android:textColor="@color/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_03"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="视听"
                android:textColor="@color/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_02"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="阅读"
                android:textColor="@color/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_04"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="发现"
                android:textColor="@color/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_05"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="设置"
                android:textColor="@color/selector_home_tab"
                android:textSize="12sp"/>
        </RadioGroup>



    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="220dp"
        app:headerLayout="@layout/navigation_view_header"
        app:menu="@menu/navigation_menu"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>